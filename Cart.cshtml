@model List<Web.Models.CartItem>

<div class="container-fluid py-5 mb-5 hero-header" style="min-height:100vh;">
    <h2>Giỏ hàng của bạn</h2>
    <div class="container py-5 h-100 d-flex align-items-center justify-content-center">
        

        @if (!Model.Any())
        {
            <p>Giỏ hàng đang trống.</p>
        }
        else
        {
            <form asp-action="Checkout" method="post">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Chọn</th>
                            <th>Tên cây</th>
                            <th>Số lượng</th>
                            <th>Giá</th>
                            <th>Xóa</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><input type="checkbox" name="selectedItems" value="@item.Id" /></td>
                                <td>@item.Tree?.Name</td>
                                <td>@item.Quantity</td>
                                <td>@(item.Tree?.Price * item.Quantity).ToString("N0") VND</td>
                                <td>
                                    <a asp-action="Remove" asp-route-id="@item.Id" class="btn btn-sm btn-danger">X</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <button type="submit" class="btn btn-success">Thanh toán các sản phẩm đã chọn</button>
            </form>
        }
    </div>
</div>