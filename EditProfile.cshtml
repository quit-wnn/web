@model Web.Models.User
@{
    ViewData["Title"] = "Chỉnh sửa hồ sơ";
}
<div class="container-fluid py-5 mb-5 hero-header" style="min-height:100vh;">
    <div class="container mt-5">
        <h3 class="text-success mb-4">Chỉnh sửa hồ sơ cá nhân</h3>
            <form asp-action="EditProfile" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label>Ảnh đại diện (URL)</label>
                <input type="text" asp-for="AvatarUrl" class="form-control" placeholder="https://..." />
            </div>
            <div class="form-group mb-3">
                <label>Mô tả ngắn</label>
                <textarea asp-for="Bio" class="form-control" rows="4" placeholder="Giới thiệu về bản thân..."></textarea>
            </div>
            <div class="form-group mb-3">
                <label>Họ và tên</label>
                <input asp-for="FullName" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label>Ngày sinh</label>
                <input asp-for="DateOfBirth" type="date" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label>Quê quán</label>
                <input asp-for="Hometown" class="form-control" />
            </div>
            <div class="form-group mb-3">
                <label>Số điện thoại</label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
            <button type="submit" class="btn btn-success">Lưu thay đổi</button>
    </form>
</div>
</div>